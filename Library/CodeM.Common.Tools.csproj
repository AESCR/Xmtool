<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <ApplicationIcon />
    <StartupObject />
    <AssemblyName>CodeM.Common.Tools</AssemblyName>
    <RootNamespace>CodeM.Common.Tools</RootNamespace>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Version>1.3.9</Version>
    <AssemblyVersion>1.3.9.0</AssemblyVersion>
    <FileVersion>1.3.9.0</FileVersion>
    <Authors>softwaiter</Authors>
    <Description>.netcore常用工具集合库（Json、Xml、正则表达式常用判断、加解密、Http请求、日期时间，数据类型、动态对象、验证码生成、发送邮件、阿里云短信等，持续收集中。。。）</Description>
    <PackageProjectUrl>https://github.com/softwaiter/netcoreTools</PackageProjectUrl>
    <RepositoryUrl>https://github.com/softwaiter/netcoreTools</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Json\DynamicObject.Extcs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="DynamicObjectExt.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HtmlSanitizer" Version="7.1.488" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

</Project>
